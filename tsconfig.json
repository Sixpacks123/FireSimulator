{
    "compilerOptions": {
      "target": "ES2020",          // Définit la version ECMAScript cible
      "module": "commonjs",        // Module pour Node.js
      "strict": true,              // Active toutes les vérifications strictes
      "esModuleInterop": true,     // Simplifie les imports avec les modules CommonJS
      "skipLibCheck": true,        // Ignore les vérifications sur les fichiers de déclaration
      "forceConsistentCasingInFileNames": true // Force la casse cohérente dans les noms de fichiers
    },
    "include": ["**/*.ts"],         // Inclut tous les fichiers TypeScript
    "exclude": ["node_modules"]    // Exclut les dépendances Node.js
  }
  